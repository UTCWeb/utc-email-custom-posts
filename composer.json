{
    "name": "utc/utc-email-custom-posts",
    "description": "A custom plugin to provide UTC branded HTML Email templates.",
    "license": "GPL-2.0",
    "type": "wordpress-plugin",
    "authors": [{
        "name": "Chris Gilligan",
        "email": "chris-gilligan@utc.edu"
    }],
    "require": {
        "jozoor/wp-templater": "^1.0",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "scripts": {
        "phpcs": [
            "\"vendor/bin/phpcs\" --standard=WordPress utc-email-custom-posts.php"
        ],
        "phpcbf": [
            "\"vendor/bin/phpcbf\" --standard=WordPress utc-email-custom-posts.php"
        ],
        "post-install-cmd": [
            "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ],
        "post-update-cmd": [
            "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
